{
  "Comment": "Allows the pizza people to update the status of the order.",
  "name": "Update Status",
  "version": "1.0",
  "categories": [
    "pizza"
  ],
  "StartAt": "FindingById",
  "States": {
    "FindingById": {
      "Type": "Task",
      "InputPath": "$.boardKeys.pizzaId",
      "Resource": "module:findingById",
      "ResourceConfig": {
        "modelId": "pizza"
      },
      "ResultPath": "$",
      "Next": "AwaitingHumanInput"
    },
    "AwaitingHumanInput": {
      "Type": "Task",
      "Resource": "module:awaitingHumanInput",
      "ResourceConfig": {
        "uiType": "form",
        "uiName": "pizza_updateStatusForm",
        "dataPath": "$"
      },
      "Next": "Upserting"
    },
    "Upserting": {
      "Type": "Task",
      "InputPath": "$",
      "Resource": "module:upserting",
      "ResourceConfig": {
        "modelId": "pizza"
      },
      "End": true
    }
  },
  "restrictions": [
    {
      "roleId": "pizza_chef",
      "allows": [
        "*"
      ]
    }
  ]
}
