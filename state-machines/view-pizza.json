{
  "Comment": "Allows user to view an order they have made.",
  "name": "View Order",
  "version": "1.0",
  "categories": [
    "pizza"
  ],
  "StartAt": "FindingById",
  "States": {
    "FindingById": {
      "Type": "Task",
      "InputPath": "$.boardKeys.pizzaId",
      "Resource": "module:findingById",
      "ResourceConfig": {
        "modelId": "pizza"
      },
      "ResultPath": "$",
      "Next": "AwaitingHumanInput"
    },
    "AwaitingHumanInput": {
      "Type": "Task",
      "Resource": "module:awaitingHumanInput",
      "ResourceConfig": {
        "uiType": "board",
        "uiName": "pizza_pizzaDetails",
        "uiListener": [
          {
            "topic": "model:pizza_pizza_afterUpdate",
            "where": {
              "id": {
                "equals": "$.boardKeys.pizzaId"
              }
            }
          },
          {
            "topic": "model:pizza_pizza_afterDelete",
            "where": {
              "id": {
                "equals": "$.boardKeys.pizzaId"
              }
            }
          }
        ],
        "dataPath": "$"
      },
      "End": true
    }
  },
  "restrictions": [
    {
      "roleId": "pizza_customer",
      "allows": [
        "*"
      ]
    }
  ]
}
