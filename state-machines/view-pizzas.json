{
  "Comment": "View ordered pizzas",
  "name": "View Ordered Pizzas",
  "version": "1.0",
  "categories": [
    "pizza"
  ],
  "instigators": [
    "user"
  ],
  "instigatorGroup": "app",
  "StartAt": "Find",
  "States": {
    "Find": {
      "Type": "Task",
      "Resource": "module:finding",
      "ResourceConfig": {
        "modelId": "pizza",
        "filter": {
          "orderBy": ["-created"]
        }
      },
      "ResultPath": "$.pizzas",
      "Next": "AwaitingHumanInput"
    },
    "AwaitingHumanInput": {
      "Type": "Task",
      "Resource": "module:awaitingHumanInput",
      "ResourceConfig": {
        "uiType": "info",
        "uiName": "pizza_orderedPizzas",
        "uiListener": [
          "pizza_pizza_beforeInsert",
          "pizza_pizza_beforeUpdate",
          "pizza_pizza_afterDelete"
        ],
        "dataPath": "$"
      },
      "End": true
    }
  },
  "restrictions": [
    {
      "roleId": "pizza_chef",
      "allows": [
        "*"
      ]
    }
  ]
}
