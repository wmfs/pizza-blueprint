{
  "Comment": "Take an uploaded menu and file away in cloud storage",
  "name": "Menu upload handler",
  "version": "1.0",
  "categories": [
    "pizza"
  ],
  "StartAt": "Process",
  "States": {
    "Process": {
      "Type": "Task",
      "Resource": "module:ensureCloudStorageFolder",
      "ResourceConfig": {
        "folderPath": "pizza-menu"
      },
      "Next": "CopyToCloudStorage"
    },
    "CopyToCloudStorage": {
      "Type": "Task",
      "Resource": "function:pizza_pizzaUploadHandler",
      "End": true
    }
  },
  "restrictions": [
    {
      "roleId": "pizza_check",
      "allows": [
        "*"
      ]
    }
  ]
}
