{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "Jumbotron",
      "backgroundImage": "wmfs/pizza.jpg",
      "title": "Pizza Place",
      "wash": "black"
    },
    {
      "type": "TextBlock",
      "size": "medium",
      "text": "Update Status",
      "spacing": "large"
    },
    {
      "type": "Input.ChoiceSet",
      "id": "status",
      "value": "PENDING",
      "choices": [
        {
          "title": "Pending",
          "value": "PENDING"
        },
        {
          "title": "Complete",
          "value": "COMPLETE"
        }
      ],
      "style": "expanded"
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "Submit"
    },
    {
      "type": "Action.Cancel",
      "title": "Cancel"
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.0"
}
