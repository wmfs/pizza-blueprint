{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "Jumbotron",
      "backgroundImage": "wmfs/pizza.jpg",
      "title": "Pizza Place",
      "subtitle": "This is an example view where you can order some imaginary pizza.",
      "wash": "black"
    },
    {
      "id": "yourDetails",
      "title": "Your Details",
      "tocIcon": "account_box",
      "type": "Container",
      "spacing": "small",
      "items": [
        {
          "type": "TextBlock",
          "size": "extraLarge",
          "text": "Your Details"
        },
        {
          "type": "Input.Text",
          "id": "firstName",
          "placeholder": "First Name",
          "spacing": "large"
        },
        {
          "type": "Input.Text",
          "id": "lastName",
          "placeholder": "Last Name",
          "spacing": "large"
        },
        {
          "type": "Input.Number",
          "id": "phoneNumber",
          "placeholder": "Phone Number",
          "spacing": "large"
        },
        {
          "type": "TextBlock",
          "size": "medium",
          "text": "Dietary Requirements",
          "spacing": "large"
        },
        {
          "type": "Input.ChoiceSet",
          "id": "dietaryReq",
          "choices": [
            {
              "title": "Peanut Allergy",
              "value": "PEANUT"
            },
            {
              "title": "Gluten Free",
              "value": "GLUTEN_FREE"
            },
            {
              "title": "Dairy Free",
              "value": "DAIRY_FREE"
            },
            {
              "title": "Other",
              "value": "OTHER"
            }
          ],
          "isMultiSelect": true
        }
      ]
    },
    {
      "type": "Container",
      "showWhen": "data.dietaryReq.includes('OTHER')",
      "items": [
        {
          "type": "TextBlock",
          "size": "medium",
          "text": "Please enter your other dietary requirements..."
        },
        {
          "type": "Input.Text",
          "id": "dietaryReqOther",
          "isMultiline": true
        }
      ]
    },
    {
      "id": "thePizza",
      "title": "The Pizza",
      "tocIcon": "local_pizza",
      "type": "Container",
      "spacing": "small",
      "items": [
        {
          "type": "TextBlock",
          "size": "extraLarge",
          "text": "The Pizza"
        },
        {
          "type": "TextBlock",
          "size": "medium",
          "spacing": "large",
          "text": "What size pizza?"
        },
        {
          "type": "Input.ChoiceSet",
          "id": "size",
          "value": "M",
          "choices": [
            {
              "title": "Small",
              "value": "S"
            },
            {
              "title": "Medium",
              "value": "M"
            },
            {
              "title": "Large",
              "value": "L"
            },
            {
              "title": "Extra Large",
              "value": "XL"
            },
            {
              "title": "Extra Extra Large",
              "value": "XXL"
            }
          ],
          "style": "expanded"
        },
        {
          "type": "TextBlock",
          "size": "medium",
          "text": "Would you like it savoury or sweet?",
          "spacing": "large"
        },
        {
          "type": "Input.ChoiceSet",
          "id": "savouryOrSweet",
          "choices": [
            {
              "title": "Savoury",
              "value": "SAVOURY"
            },
            {
              "title": "Sweet",
              "value": "SWEET"
            }
          ],
          "style": "expanded"
        },
        {
          "type": "Container",
          "id": "savourySet",
          "showWhen": "data.savouryOrSweet === 'SAVOURY'",
          "spacing": "small",
          "items": [
            {
              "type": "TextBlock",
              "size": "medium",
              "text": "What base would you like?"
            },
            {
              "type": "Input.ChoiceSet",
              "id": "base",
              "value": "TOMATO",
              "choices": [
                {
                  "title": "Tomato Sauce",
                  "value": "TOMATO"
                },
                {
                  "title": "BBQ",
                  "value": "BBQ"
                },
                {
                  "title": "Sweet and Sour",
                  "value": "SWEETSOUR"
                }
              ]
            },
            {
              "type": "Input.Toggle",
              "id": "hot",
              "spacing": "large",
              "title": "Do you like it hot?",
              "value": "false"
            },
            {
              "type": "TextBlock",
              "size": "medium",
              "spacing": "large",
              "text": "How hot do you like it?",
              "showWhen": "data.hot"
            },
            {
              "type": "Input.ChoiceSet",
              "id": "howHot",
              "showWhen": "data.hot",
              "choices": [
                {
                  "title": "1 Chilli",
                  "value": 1
                },
                {
                  "title": "2 Chillies",
                  "value": 2
                },
                {
                  "title": "3 Chillies",
                  "value": 3
                },
                {
                  "title": "4 Chillies",
                  "value": 4
                },
                {
                  "title": "5 Chillies",
                  "value": 5
                },
                {
                  "title": "6 Chillies",
                  "value": 6
                }
              ],
              "style": "expanded"
            },
            {
              "type": "TextBlock",
              "size": "small",
              "color": "attention",
              "text": "We will not be held responsible if you can't handle the heat!",
              "showWhen": "data.hot"
            },
            {
              "type": "TextBlock",
              "size": "medium",
              "spacing": "large",
              "text": "Select what toppings you would like (up to 3)"
            },
            {
              "type": "Input.ChoiceSet",
              "id": "toppings",
              "choices": [
                {
                  "title": "Pepperoni",
                  "value": "PEPPERONI"
                },
                {
                  "title": "Olives",
                  "value": "OLIVES"
                },
                {
                  "title": "Peppers",
                  "value": "PEPPERS"
                },
                {
                  "title": "Pineapple",
                  "value": "PINEAPPLE"
                },
                {
                  "title": "Ham",
                  "value": "HAM"
                },
                {
                  "title": "Chicken",
                  "value": "CHICKEN"
                },
                {
                  "title": "Spicy Beef",
                  "value": "SPICY_BEEF"
                },
                {
                  "title": "Jalapenos",
                  "value": "JALAPENOS"
                }
              ],
              "style": "expanded",
              "isMultiSelect": true
            }
          ]
        },
        {
          "type": "Container",
          "id": "sweetSet",
          "showWhen": "data.savouryOrSweet === 'SWEET'",
          "spacing": "small",
          "items": [
            {
              "type": "TextBlock",
              "size": "medium",
              "text": "What primary flavour would you like?"
            },
            {
              "type": "Input.ChoiceSet",
              "id": "primary",
              "choices": [
                {
                  "title": "Milk Chocolate",
                  "value": "MILK_CHOC"
                },
                {
                  "title": "White Chocolate",
                  "value": "WHITE_CHOC"
                },
                {
                  "title": "Dark Chocolate",
                  "value": "DARK_CHOC"
                },
                {
                  "title": "Toffee",
                  "value": "TOFFEE"
                }
              ]
            },
            {
              "type": "TextBlock",
              "size": "medium",
              "spacing": "large",
              "text": "What secondary flavour would you like?",
              "showWhen": "data.primary"
            },
            {
              "type": "Input.ChoiceSet",
              "id": "secondary",
              "showWhen": "data.primary",
              "choices": [
                {
                  "title": "Milk Chocolate",
                  "value": "MILK_CHOC"
                },
                {
                  "title": "White Chocolate",
                  "value": "WHITE_CHOC"
                },
                {
                  "title": "Dark Chocolate",
                  "value": "DARK_CHOC"
                },
                {
                  "title": "Toffee",
                  "value": "TOFFEE"
                }
              ]
            },
            {
              "id": "sprinkles",
              "showWhen": "data.secondary",
              "type": "Input.Toggle",
              "title": "Would you like hundreds and thousands sprinkles on your pizza?",
              "value": false,
              "spacing": "large"
            }
          ]
        }
      ]
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "size": "medium",
          "text": "Would you like to collect your pizza or have it delivered?",
          "wrap": true
        },
        {
          "type": "Input.ChoiceSet",
          "id": "deliveryOrCollection",
          "value": "COLLECT",
          "choices": [
            {
              "title": "Collect",
              "value": "COLLECT"
            },
            {
              "title": "Deliver",
              "value": "DELIVER"
            }
          ],
          "style": "expanded"
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "Submit"
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.0"
}
