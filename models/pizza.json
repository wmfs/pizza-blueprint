{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "Pizza",
  "description": "A model for storing details of a pizza (recipe, price etc.)",
  "type": "object",
  "properties": {
    "status": {
      "title": "Status of the pizza order",
      "type": "string"
    },
    "name": {
      "title": "Name",
      "type": "string"
    },
    "phoneNumber": {
      "title": "Phone number",
      "type": "integer"
    },
    "dietaryReq": {
      "title": "Dietary requirements",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "dietaryReqOther": {
      "title": "Other dietary requirements",
      "type": "string"
    },
    "size": {
      "title": "Size of the pizza",
      "type": "string",
      "default": "M",
      "enum": [
        "S",
        "M",
        "L",
        "XL",
        "XXL"
      ]
    },
    "savouryOrSweet": {
      "title": "Type of pizza",
      "type": "string"
    },
    "base": {
      "title": "Base",
      "type": "string",
      "default": "TOMATO",
      "enum": [
        "TOMATO",
        "BBQ",
        "SWEETSOUR"
      ]
    },
    "hot": {
      "title": "Hot or not?",
      "type": "boolean",
      "default": false
    },
    "howHot": {
      "title": "Level of heat",
      "type": "integer"
    },
    "toppings": {
      "title": "Toppings",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "primaryFlavour": {
      "title": "Primary flavour",
      "type": "string"
    },
    "secondaryFlavour": {
      "title": "Secondary flavour",
      "type": "string"
    },
    "sprinkles": {
      "title": "Sprinkles or not?",
      "type": "boolean",
      "default": false
    },
    "deliveryOrCollection": {
      "title": "Delivery or collection?",
      "type": "string",
      "default": "COLLECT",
      "enum": [
        "COLLECT",
        "DELIVER"
      ]
    }
  },
  "required": [
    "name",
    "phoneNumber"
  ]
}
